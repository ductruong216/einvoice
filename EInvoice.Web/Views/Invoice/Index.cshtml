								</div>*@
							<div class="row col-md-12">
								<div class="col-md-6">
									<div class="form-group row">
										<label class="col-form-label col-sm-4 pt-2 p-0 ">Payment Type: <span>*</span> </label>
										<div class="input-group col-sm-8">
											<span class="icon-case"><i class="fas fa-usd"></i></span>
											<select class="form-control" type="text">
												<option selected>Choose...</option>
												<option>Cash payment(CP)</option>
												<option>Bank transfer(BT)</option>
												<option>CP/BT</option>
											</select>
										</div>
									</div>
								</div>
								<div class="col-md-6">

									@*<div class="form-group row">
											<label class="col-form-label col-md-4 pt-2 p-0 ">Bank Name:</label>
											<div class="input-group col-md-8">
												<span class="icon-case"><i class="fas fa-bank"></i></span>
												<input class="form-control" id="bankName" type="text">
