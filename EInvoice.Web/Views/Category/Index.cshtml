@model IList<EInvoice.Data.Data.Product>
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_mainLayout.cshtml";
}

@Html.DevExpress().GetStyleSheets(
	new StyleSheet { ExtensionSuite = ExtensionSuite.GridView})
@Html.DevExpress().GetScripts(
	new Script { ExtensionSuite = ExtensionSuite.GridView})

<div class="container-fluid">
	<div class="row">
		<div class="col-lg-8">
			<div class="table-responsive table--no-card  m-b-40">
				@using (Html.BeginForm("Category"))
				{
					@Html.Hidden("customExportCommand")
					@Html.Action("ProductPartial", "Category")
				}
			</div>
		</div>
		<div class="col-lg-4">
			<div class="table-responsive table--no-card m-b-40">
				@Html.Action("UnitPartial", "Category")
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<div class="table-responsive table--no-card  m-b-40">
				@using (Html.BeginForm("Category"))
				{
					@Html.Hidden("customExportCommand")
					@Html.Action("CustomerPartial", "Category")
				}
			</div>
		</div>
	</div>
</div>