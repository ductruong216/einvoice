@using EInvoice.Data.Data
@using EInvoice.Data.Utilities
@{
    var userSession = (User)SessionHelper.GetSessionValue(Constant.UserSession);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- Custom Theme Style -->
    <link href="/build/css/custom.min.css" rel="stylesheet">
    <!-- Date Ranger Picker -->
    <link href="~/vendors/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet" />
    <link href="~/Assets/Owner/css/sweetAlert.css" rel="stylesheet" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="icon" href="~/Assets/Owner/Images/favicon.png" type="image/ico">
    <link href="~/Assets/Owner/css/customer.css" rel="stylesheet" />

    <title>@ViewBag.Title</title>

</head>
<body class="nav-md">
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    <div class="navbar nav_title" style="border: 0;">
                        <a href=@Url.Action("Index","Home") class="site_title" style="text-align:center"><span>E-INVOICE</span></a>
                    </div>

                    <div class="clearfix"></div>

                    <!-- menu profile quick info -->
                    <div class="profile clearfix">
                        <div class="profile_pic">
                            <img src="~/Assets/Owner/Images/Avatars/IMG_6692.jpg" class="img-circle profile_img" />
                        </div>
                        <div class="profile_info">
                            <span>Welcome,</span>
                            <h2>@userSession.FullName</h2>
                        </div>
                    </div>
                    <!-- /menu profile quick info -->
                    <br />
                    <!-- sidebar menu -->
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                        <div class="menu_section">
                            <ul class="nav side-menu">
                                <li>
                                    <a><i class="fa fa-book"></i>Invoices<span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li>
                                            <a href="@Url.Action("Create","Invoice")">New Invoice</a>
                                        </li>
                                        <li>
                                            <a href="@Url.Action("List", "Invoice")">Invoice Management</a>
                                        </li>
                                        @*<li>
                                                <a href="#">Modify Invoice</a>
                                            </li>*@
                                    </ul>
                                </li>

                                <li>
                                    <a><i class="fa fa-tasks"></i> Categories <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li>
                                            <a href="@Url.Action("Index", "Product")">Products</a>
                                        </li>
                                        <li>
                                            <a href="@Url.Action("Index", "Customer")">Customers</a>
                                        </li>
                                        <li>
                                            <a href="@Url.Action("Others", "Category")">Others</a>
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a href="#" @*href="@Url.Action("Report", "Invoice")"*@ data-toggle="modal" data-target="#selectReportPriod">
                                        <i class="fa fa-bar-chart"></i>
                                        Report
                                    </a>
                                </li>

                                @*<li>
                                        <a href="#">
                                            <i class="fa fa-users"></i>
                                            <span class="bot-line"></span>User
                                        </a>
                                    </li>*@
                                @if (userSession.Position == "Accountant")
                                {
                                    <li>
                                        <a href="@Url.Action("Index", "CompanyInfo")">
                                            <i class="fa fa-info-circle" aria-hidden="true"></i>
                                            <span>Company Info</span>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                    <!-- /sidebar menu -->
                </div>
            </div>

            <!-- top navigation -->
            <div class="top_nav">
                <div class="nav_menu">
                    <nav>
                        <div class="nav toggle">
                            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                        </div>
                        @if (userSession != null)
                        {
                            <ul class="nav navbar-nav navbar-right">
                                <li class="">
                                    <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                        <img src="~/Assets/Owner/Images/Avatars/IMG_6692.jpg" alt="">
                                        @userSession.FullName
                                        <span class=" fa fa-angle-down"></span>
                                    </a>
                                    <ul class="dropdown-menu dropdown-usermenu pull-right">
                                        <li>
                                            <a href="@Url.Action("LogOut", "Login")"><i class="fa fa-sign-out pull-right"></i>Logout</a>
                                        </li>
                                    </ul>
                                </li>


                            </ul>
                            @*<ul class="nav navbar-nav navbar-right" style="width: 260px">*@

                            @*<li class="">
                                <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    @*<img src="/Image/" alt="">*@
                            @*<span class="fa fa-angle-down"></span>
                                </a>
                                <ul class="dropdown-menu dropdown-usermenu pull-right">

                                    <li><a><i class="fa fa-sign-out pull-right"></i>*Html.ActionLink("LogOut", "LogOut", "Login")</a></li>
                                </ul>
                                </li>s </ul>*@
                        }
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">
                @RenderBody()
            </div>
            <!-- /page content -->
            <!-- footer content -->
            <footer>
                <div class="pull-right">

                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>

    @* Lua chon ky hoa don *@

    <div class="modal fade" id="selectReportPriod" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="vertical-alignment-helper">
            <div class="modal-dialog modal-md vertical-align-center">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">
                            <span aria-hidden="true">×</span>
                        </button>
                        <h4 class="modal-title" id="myModalLabel">Select Priod</h4>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-group">
                                <label for="exampleSelect1">Select Priod</label>
                                <select class="form-control" id="selectQuater">
                                    <option value="1">1st Quater</option>
                                    <option value="2">2nd Quater</option>
                                    <option value="3">3rd Quater</option>
                                    <option value="4">4th Quater</option>
                                    <option>Whole Year</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="exampleSelect1">Select Year</label>
                                <select class="form-control" id="selectYear">
                                    <option value="2018">2018</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <button style="float:right;" type="button" onclick="SubmitReport()" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Jquery JS-->
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery-1.12.4.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/sweetalert.min.js"></script>
    <script src="~/Assets/Owner/js/myscript.js"></script>
    <script src="~/Assets/Owner/js/customer.js"></script>
    <script src="~/Assets/Owner/js/invoice.js"></script>
    <script src="~/Assets/Owner/js/item.js"></script>
    <script src="~/Assets/Owner/js/product.js"></script>
    <!-- Date Ranger Picker -->
    <script src="~/vendors/moment/min/moment.min.js"></script>
    <script src="~/vendors/bootstrap-daterangepicker/daterangepicker.js"></script>
    <script src="~/vendors/bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js"></script>
    <!-- Bootstrap -->
    <script src="/vendors/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- Custom Theme Scripts -->
    <script src="/build/js/custom.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Assets/Owner/js/report.js"></script>
</body>
</html>

